{% extends 'base.html.twig' %}

{% block title %}Demand index{% endblock %}

{% block body %}
    <h1>Demand index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Status</th>
                <th>Views</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for demand in demands %}
            <tr>
                <td>{{ demand.id }}</td>
                <td>{{ demand.content }}</td>
                <td>{{ demand.status }}</td>
                <td>{{ demand.views ? 'Yes' : 'No' }}</td>
                <td>{{ demand.createdAt ? demand.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ demand.updatedAt ? demand.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('demand_show', {'id': demand.id}) }}">show</a>
                    <a href="{{ path('demand_edit', {'id': demand.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('demand_new') }}">Create new</a>
{% endblock %}
