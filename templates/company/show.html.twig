{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
    <div class="container-fluid">
        <a href="{{ path('company_index') }}"><button type="button" class="btn btn-primary btn-md mb-3">back to list</button></a>
        <div class="alert alert-primary" role="alert">
            <div class="justify-content-start">
                <h3 class="">Edit</h3>
                <a href="{{ path('company_edit', {'id': company.id}) }}"><button type="button" class="btn btn-primary btn-md"> <i class="cil-pencil"></i> Edit</button></a>
            </div>
        </div>

    {{ include('company/_delete_form.html.twig') }}

    <h1>Company</h1>

    <table class="table mb-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ company.Address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ company.city }}</td>
            </tr>
            <tr>
                <th>Zip_code</th>
                <td>{{ company.zipCode }}</td>
            </tr>
            <tr>
                <th>Email_address</th>
                <td>{{ company.emailAddress }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ company.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>
    <h1 class="mt-3">Customers from the company</h1>
    <table class="table table-light table-striped border shadow p-3 mb-5 bg-white rounded">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First name</th>
            <th scope="col">Last name</th>
            <th scope="col">Email address</th>
            <th scope="col">Access</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <a href="{{ path('customer_show', {'id': customer.id}) }}">
                <tr>
                    <td>{{ customer.id }}</td>
                    <td>{{ customer.firstName }}</td>
                    <td>{{ customer.lastName }}</td>
                    <td>{{ customer.emailAddress }}</td>
                    <td>{{ customer.access ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('customer_show', {'id': customer.id}) }}"><i class="cil-magnifying-glass"></i></a>
                    </td>
                    <td>
                        <a href="{{ path('customer_edit', {'id': customer.id}) }}"><i class="cil-pencil"></i> </a>
                    </td>
                </tr>
            </a>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
