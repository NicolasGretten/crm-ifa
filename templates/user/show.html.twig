{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container-fluid justify-content-center">
        <a href="{{ path('user_index') }}"><button class="btn btn-ghost-primary mb-3"><< Back to list</button></a>
        <div class="alert alert-primary mb-5" role="alert">
            <div class="row justify-content-center">
                <div class="col-4">
                    <a href="{{ path('user_edit', {'id': user.id}) }}"><button type="button" class="btn btn-ghost-primary btn-block btn-lg"><i class="cil-pencil"></i></button></a>
                </div>
                <div class="col-4">
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-8 m-auto border p-3 shadow-lg p-3 mb-5 bg-white rounded">
                <h1 class="mb-5">User</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ user.createdAt ? user.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
