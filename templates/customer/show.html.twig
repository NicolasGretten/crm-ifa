{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
<div class="container-fluid justify-content-center">
    <a href="{{ path('customer_index') }}"><button class="btn btn-ghost-primary mb-3"><< Back to list</button></a>
    <div class="alert alert-primary mb-5" role="alert">
        <div class="row justify-content-center">
            <div class="col-4">
                <a href="{{ path('customer_edit', {'id': customer.id}) }}"><button type="button" class="btn btn-ghost-primary btn-block btn-lg"><i class="cil-pencil"></i></button></a>
            </div>
            <div class="col-4">
                {{ include('customer/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col-8 m-auto border p-3 shadow-lg p-3 mb-5 bg-white rounded">
            <h1>Customer</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ customer.id }}</td>
                    </tr>
                    <tr>
                        <th>First_name</th>
                        <td>{{ customer.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Last_name</th>
                        <td>{{ customer.lastName }}</td>
                    </tr>
                    <tr>
                        <th>Email_address</th>
                        <td>{{ customer.emailAddress }}</td>
                    </tr>
                    <tr>
                        <th>Access</th>
                        <td>{{ customer.access ? 'Yes' : 'No' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
