{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="alert alert-primary" role="alert">
            <div class="col-4 m-md-auto">
                <a href="{{ path('customer_new') }}"><button type="button" class="btn btn-ghost-primary btn-block btn-lg">Create new customer</button></a>
            </div>
        </div>
        <h1 class="mb-3">Customers</h1>
        <table class="table table-light table-striped border shadow p-3 mb-5 bg-white rounded">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">First name</th>
                        <th scope="col">Last name</th>
                        <th scope="col">Email address</th>
                        <th scope="col">Access</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
            <tbody>
            {% for customer in customers %}
                <a href="{{ path('customer_show', {'id': customer.id}) }}">
                    <tr>
                        <td>{{ customer.id }}</td>
                        <td>{{ customer.firstName }}</td>
                        <td>{{ customer.lastName }}</td>
                        <td>{{ customer.emailAddress }}</td>
                        <td>{{ customer.access ? 'Yes' : 'No' }}</td>
                        <td>
                            <a href="{{ path('customer_show', {'id': customer.id}) }}"><i class="cil-magnifying-glass"></i></a>
                        </td>
                        <td>
                            <a href="{{ path('customer_edit', {'id': customer.id}) }}"><i class="cil-pencil"></i> </a>
                        </td>
                    </tr>
                </a>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
